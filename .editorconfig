# https://editorconfig.org

root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown, config files
[*.{md,yml,yaml,json,ini,config}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh,ps1,psm1}]
indent_style = space

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf
