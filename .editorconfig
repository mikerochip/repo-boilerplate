# https://editorconfig.org

# top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown, config files
[*.{md,yml,yaml,json,ini,config}]
insert_final_newline = false
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.{command,sh,bash,zsh,ps1,psm1,psd1}]
end_of_line = lf
indent_style = space

# Windows scripts
[*.{bat,cmd}]
end_of_line = crlf

# MSBuild and VS project files
[*.{csproj,proj,projitems,shproj,fsproj,target,props}]
end_of_line = crlf
[*.{sln,csproj,fsproj,vbproj,vcxproj,vcproj,dbproj}]
end_of_line = crlf
[*.{lsproj,wixproj,modelproj,sqlproj,wmaproj,xproj}]
end_of_line = crlf
[*.{booproj,unityproj,props,filters,vcxitems}]
end_of_line = crlf

# XML files
[*.{config,nuspec,resx,natvis,axaml,xaml}]
indent_size = 2

# Terraform
[*.{tf,hcl,tfvars,tfbackend,tf.json,tfvars.json,tftest.json}]
indent_size = 2
